{
  "manifest_version": 3,
  "name": "Cookies Blocker",
  "author": "Antoine Le Calloch",
  "version": "1.0",
  "description": "A browser extension designed to automatically refuse unnecessary cookies on websites.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "*://*.google.com/*",
        "*://*.google.fr/*",
        "*://*.google.co.uk/*",
        "*://*.search.yahoo.com/*",
        "*://*.bing.com/*",
        "*://*.duckduckgo.com/*"
      ],
      "js": ["blocker.js"],
      "run_at": "document_end"
    }
  ]
}